{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist/server",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/backend/**/*", "src/index.ts", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend"]
}
